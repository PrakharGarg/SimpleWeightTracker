<div id = "graph">
  <%= User.count %>
   <%= area_chart Weight.group_by_day(:created_at).count %>
   <%= line_chart User.group_by_day(:created_at).count %>
</div>

<div id = "update">
  <%= form_tag("/weights", method: "post") do %>
    <%= label_tag(:new_weight, "Enter Weight") %>
    <br />
    <%= text_field_tag(:new_weight) %>
    <%= hidden_field_tag 'user_id', current_user.id %>
    <%= submit_tag("Enter") %>
  <% end %>
</div>